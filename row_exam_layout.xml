        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_third_question_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <RadioButton
                android:id="@+id/rb_third_question_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:checked="false"
                android:padding="1dp" />

            <TextView
                android:id="@+id/tv_third_question_exam"
                style="@style/text_view_question_style"
                android:layout_gravity="center_vertical"
                android:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا النص من مولد النص العربى، حيث يمكنك أن تولد مثل هذا" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fourth_question_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <RadioButton
                android:id="@+id/rb_fourth_question_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:checked="false"
                android:padding="1dp" />

            <TextView
                android:id="@+id/tv_fourth_question_exam"
                style="@style/text_view_question_style"
                android:layout_gravity="center_vertical"
                android:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا النص من مولد النص العربى، حيث يمكنك أن تولد مثل هذا" />

