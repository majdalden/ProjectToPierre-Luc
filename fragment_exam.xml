<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/layout_background_shape"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <com.majdalden.al_raadforteachingsupport.ui.CustomView.WrapContentHeightViewPager
            android:id="@+id/vp_pager_exam"
            class="WrapContentHeightViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--class="de.cybergen.ui.layout.WrapContentHeightViewPager"-->

        <LinearLayout
            android:id="@+id/ll_move_button_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:id="@+id/but_next_question_exam"
                android:layout_weight="0.5"
                style="@style/button_text_green_text_style"
                android:text="@string/next_question" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="0.5"
                android:id="@+id/but_previous_question_exam"
                style="@style/button_text_green_text_style"
                android:text="@string/previous_question" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_other_details_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/tv_text_remaining_time_exam"
                android:text="@string/the_remaining_time"
                android:textColor="#267320"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_view_timer_shape"
                android:gravity="center"
                android:padding="10dp"
                android:id="@+id/tv_number_remaining_time_exam"
                android:text="2:58:55"
                android:textColor="#267320"
                android:textSize="18sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:id="@+id/but_end_exam_exam"
                style="@style/button_text_green_text_style"
                android:text="@string/end_exam" />

            <TextView
                android:id="@+id/tv_result_exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/you_have_already_submitted_the_test_wait_for_the_next_test_good_luck"
                android:textColor="#267320"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_text_correct_answer_rat_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/the_correct_answer_rate"
                android:textColor="#267320"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_number_correct_answer_rat_exam"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_login_shape"
                android:gravity="center"
                android:text="0%"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>